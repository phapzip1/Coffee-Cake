<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#E6E6E6"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_staff_info">
    <ImageView
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:src="@drawable/round_bg_white_min">
    </ImageView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btnBack"
            android:src="@drawable/ic_arrow_back_ios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_oval="true"
            android:src="@drawable/misthy1"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </com.makeramen.roundedimageview.RoundedImageView>
        <TextView
            android:id="@+id/edtName"
            android:layout_gravity="center"
            android:text="Misthy"
            android:layout_marginTop="4dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Position"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dennhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <!--                Sử dụng Spinner để khi ấn vào nút tam giác nó sẽ xổ ra các lựa chọn-->
            <!--                1. Admin-->
            <!--                2. Staff-->
            <!--                <Spinner-->
            <!--                    android:layout_marginTop="8dp"-->
            <!--                    android:id="@+id/spinner"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content" />-->
                <TextView
                    android:text="Manager"
                    android:textSize="18sp"
                    android:textColor="@color/dennhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:background="#ccc"
                android:layout_width="2dp"
                android:layout_height="30dp"/>

            <LinearLayout
                android:layout_marginLeft="42dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Gender"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dennhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <!--   Giới tính,Sử dụng Spinner để khi ấn vào nút tam giác nó sẽ xổ ra các lựa chọn-->
            <!--   1. Nam-->
            <!--   2. Nữ-->
            <!--   3. Khác-->
            <!--                <Spinner-->
            <!--                    android:layout_marginTop="8dp"-->
            <!--                    android:id="@+id/spinner2"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content" />-->
                <TextView
                    android:text="Female"
                    android:textSize="18sp"
                    android:textColor="@color/dennhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgEmail"
                android:padding="12dp"
                android:src="@drawable/ic_email"
                android:gravity="center"
                android:background="@drawable/circle_img_blue_dam"
                android:textColor="@color/white"
                android:layout_width="56dp"
                android:layout_height="56dp"/>
            <ImageView
                android:id="@+id/imgMessage"
                android:padding="12dp"
                android:src="@drawable/ic_message"
                android:gravity="center"
                android:background="@drawable/circle_img"
                android:layout_marginLeft="32dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_width="56dp"
                android:layout_height="56dp"/>
            <ImageView
                android:id="@+id/imgPhone"
                android:padding="12dp"
                android:src="@drawable/ic_phone"
                android:gravity="center"
                android:background="@drawable/circle_img_green_nhat"
                android:layout_marginLeft="32dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:layout_width="56dp"
                android:layout_height="56dp"/>

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_marginTop="42dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="CMND/CCCD:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/dennhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="12345"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDate"
                    android:text="Date of birth:"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/dennhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvCmnd"
                    android:text="30/04/2002"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:text="Address:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/dennhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvAddress"
            android:text="Tp.Ho Chi Minh"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:text="Phone Number:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/dennhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvPhone1"
            android:text="0968686868"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:text="Email:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/dennhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvEmail"
            android:text="misthy@gmail.com"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:text="Shift:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/dennhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Morning"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</FrameLayout>