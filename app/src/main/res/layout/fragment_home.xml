<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FDE2AB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_home">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_bg_white"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawablePadding="9dp"
                    android:hint="Search your Drinks"
                    android:padding="10dp"
                    android:textColorHint="@color/dennhat"
                    android:textSize="20sp" />
                <TextView
                    android:text="Popular Drink"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="16dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="140dp">
                        <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_oval="true"
                            android:src="@drawable/ts"
                            android:layout_gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:scaleType="centerCrop"
                            android:layout_width="100dp"
                            android:layout_height="100dp">
                        </com.makeramen.roundedimageview.RoundedImageView>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:padding="12dp"
                            android:orientation="vertical"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Tea Milk"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="Descript"
                                android:textColor="@color/xanhlatuoi"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Price: $10"
                                android:textColor="@color/dennhat"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Button
                            android:background="@drawable/round_bg"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp">

                        </Button>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="16dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="140dp">
                        <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_oval="true"
                            android:src="@drawable/img_coffee"
                            android:layout_gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:scaleType="centerCrop"
                            android:layout_width="100dp"
                            android:layout_height="100dp">
                        </com.makeramen.roundedimageview.RoundedImageView>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:padding="12dp"
                            android:orientation="vertical"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Coffee"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="Descript"
                                android:textColor="@color/xanhlatuoi"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Price: $12"
                                android:textColor="@color/dennhat"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Button
                            android:background="@drawable/round_bg"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp">

                        </Button>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="16dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="140dp">
                        <com.makeramen.roundedimageview.RoundedImageView
                            app:riv_oval="true"
                            android:src="@drawable/sinhto"
                            android:layout_gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:scaleType="centerCrop"
                            android:layout_width="100dp"
                            android:layout_height="100dp">
                        </com.makeramen.roundedimageview.RoundedImageView>

                        <LinearLayout
                            android:layout_gravity="center"
                            android:padding="12dp"
                            android:orientation="vertical"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Smoothie"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="Descript"
                                android:textColor="@color/xanhlatuoi"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:text="Price: $14"
                                android:textColor="@color/dennhat"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <Button
                            android:background="@drawable/round_bg"
                            android:text="+"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp">

                        </Button>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>






            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>