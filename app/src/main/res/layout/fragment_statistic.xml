<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4E5C4"
    android:orientation="vertical"
    tools:context=".Fragment_statistic">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/layoutToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"


        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thống kê bán hàng"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout

            android:paddingTop="12dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:id="@+id/radioGr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/one_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@android:color/transparent"
                    android:layout_marginRight="10dp"
                    android:textColor="@drawable/radio_text"
                    android:padding="5dp"
                    android:background="@drawable/my_radio_button"
                    android:text="1 Tuần"/>
                <RadioButton
                    android:id="@+id/four_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@drawable/radio_text"
                    android:button="@android:color/transparent"
                    android:padding="5dp"
                    android:background="@drawable/my_radio_button"
                    android:text="4 Tuần"/>
                <RadioButton
                    android:id="@+id/lastyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@drawable/radio_text"
                    android:button="@android:color/transparent"
                    android:padding="5dp"
                    android:background="@drawable/my_radio_button"
                    android:text="Năm ngoái"/>
            </RadioGroup>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="189dp"
                app:cardCornerRadius="8dp"
                android:layout_marginVertical="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng cộng"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:textSize="15dp"/>
                    <TextView
                        android:id="@+id/summarytv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:textColor="@color/light_blue"
                        android:text="1000000"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="35dp"/>
                    <View
                        android:layout_marginHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="@color/light_gray"/>
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:columnCount="2">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_gravity="center_horizontal"
                                android:text="Trung bình"/>
                            <TextView
                                android:id="@+id/avgtv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:layout_gravity="center_horizontal"
                                android:text="1000000"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center_horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_gravity="center_horizontal"
                                android:text="Cao nhất"/>
                            <TextView
                                android:id="@+id/peaktv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:textSize="20dp"
                                android:text="1000000"/>
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginVertical="10dp"
                android:padding="10dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="340dp"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="*Đơn vị: VND"/>
        </LinearLayout>
    </LinearLayout>







</LinearLayout>