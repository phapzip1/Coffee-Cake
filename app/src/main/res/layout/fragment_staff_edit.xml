<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E6E6E6"
    android:paddingTop="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_staff_edit">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/btnBack"
        android:src="@drawable/ic_arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/round_bg_white_min">
    </ImageView>
    <LinearLayout
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_oval="true"
            android:src="@drawable/misthy1"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </com.makeramen.roundedimageview.RoundedImageView>
        <EditText
            android:id="@+id/edtName"
            android:layout_gravity="center"
            android:text="Misthy"
            android:layout_marginTop="4dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Chức vụ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dennhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!--                Sử dụng Spinner để khi ấn vào nút tam giác nó sẽ xổ ra các lựa chọn-->
                <!--                1. Admin-->
                <!--                2. Staff-->
                <!--                <Spinner-->
                <!--                    android:layout_marginTop="8dp"-->
                <!--                    android:id="@+id/spinner"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content" />-->
                <EditText
                    android:id="@+id/editPosition"
                    android:text=""
                    android:textSize="18sp"
                    android:spinnerMode="dropdown"
                    android:textColor="@color/dennhat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                android:layout_marginLeft="40dp"
                android:layout_gravity="center"
                android:background="#ccc"
                android:layout_width="2dp"
                android:layout_height="30dp"/>

            <LinearLayout
                android:layout_marginLeft="42dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Giới tính"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/dennhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!--   Giới tính,Sử dụng Spinner để khi ấn vào nút tam giác nó sẽ xổ ra các lựa chọn-->
                <!--   1. Nam-->
                <!--   2. Nữ-->
                <!--   3. Khác-->
                <!--                <Spinner-->
                <!--                    android:layout_marginTop="8dp"-->
                <!--                    android:id="@+id/spinner2"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content" />-->
                <Spinner
                    android:id="@+id/editGender"
                    android:text="Female"
                    android:textSize="18sp"
                    android:textColor="@color/dennhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginTop="52dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CCCD/CMND:"
                    android:textColor="@color/dennhat"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtCCCD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ngày sinh:"
                    android:textColor="@color/dennhat"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ngày vào làm"
                    android:textColor="@color/dennhat"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtBeginDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Số điện thoại:"
                    android:textColor="@color/dennhat"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Hệ số lương:"
                    android:textColor="@color/dennhat"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtHSL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnSaveInfoStaff"
            android:text="Lưu"
            android:layout_marginTop="24dp"
            android:textColor="@color/white"
            android:background="@drawable/round_bg"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</FrameLayout>